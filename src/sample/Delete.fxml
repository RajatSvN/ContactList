<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="sample.DeleteController"
          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" alignment="CENTER">

    <Label text="Enter the phone Number of Contact you want to delete." GridPane.columnSpan="4"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label text="Enter number : " GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="checkNumber"/>

    <Button  text="Enter" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#delete" fx:id="deleter"/>

    <Label fx:id="status" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="4"/>

</GridPane>